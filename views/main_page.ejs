<!-- main page to show the publicly available resources -->

<body>
  <%- include('partials/_header') %>
  <main class="main-container">


    <div id="wrapper">

      <% if (user) { %>
      <form action="/resources" method="POST" id="new_resource_form">
        <!--<label for="new_resource_form">share your resource</label>-->

        <div id="fill-in-form">
          <textarea form="new_resource_form" name="title" id="new_resource_title" placeholder="title"
            required></textarea>
          <textarea form='new_resource_form' name="topic" id="new_resource_topic"
            placeholder="Resource topic (javascript, etc.)"></textarea>
          <textarea form="new_resource_form" name="url" type="url" id="new_resource_url"
            placeholder="http://www.example.com" required></textarea>
          <textarea form="new_resource_form" name="description" id="new_resource_description" placeholder="description"
            required></textarea>
          <textarea form="new_resource_form" name="image" id="new_resource_image"
            placeholder="provide an image link for thumbnail" required></textarea>

          <div id="category-submit">
            <label for="resource_category">category: </label>
            <select form="new_resource_form" name='category' id='resource_category' required>
              <option value="1">Article</option>
              <option value="2">Video</option>
              <option value="3">Tutorial</option>
            </select><br>
          </div>
          <button type="submit">Share Resource</button>
        </div>



      </form>
      <% } else { %>
      <div id="slogan">
        <h1>SHARE AND INSPIRE.</h1>
      </div>
      <% } %>
    </div>

    <section id="main-wall">
      <!--
      <div id="category-icons">


        <div id="filter-by">filter by</div>
        <div class="category">articles</div>
        <div class="category">videos</div>
        <div class="category">tutorials</div>
    </div>
-->
      <div id="content-background">

        <div id="content-container">
          <% for(const resource of resourceList) { %>
          <div class="content fill"><a href="/resources/<%= resource.id %>">
              <img src=<%= resource.image_url %>>
              <div class=" title-description">

                <h2><%= resource.title %></h2>

                <p><%= resource.description %></p>

              </div>
            </a>
          </div>
          <% } %>
        </div>

      </div>
    </section>

  </main>

</body>
