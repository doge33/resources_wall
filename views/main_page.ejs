<!-- main page to show the publicly available resources -->
<%- include('partials/_header') %>

<body>
  <% if (user) { %>
  <form action="/resources" method="POST">
    <label for="new_content">What are you humming about?</label>
    <textarea name="text" id="new-content"></textarea>
  </form>
  <% } %>

  <main class="main-container">
    <section id="content-container">
      <% for(const resource of resourceList) { %>
      <article class="content">
        <header>
          <h2><%= resource.title %></h2>
          <embed src=<%= resource.url %> type="text/html">
          <p><%= resource.description %></p>
        </header>
      </article>
      <% } %>
    </section>
  </main>
</body>
